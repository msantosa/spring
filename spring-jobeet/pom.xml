			<version>4.8.1</version>
		</dependency>
	</dependencies>
	<properties>
		<org.springframework.version>4.0.0.RELEASE</org.springframework.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<tiles.version>2.2.2</tiles.version>
	</properties>
</project>